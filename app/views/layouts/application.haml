!!! 5
%html{:lang => I18n.locale.to_s}
  %head
    %meta{:charset => "utf-8"}/
    %title= "A64"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = javascript_include_tag "http://maps.googleapis.com/maps/api/js?sensor=false"
    / Le fav and touch icons
    %link{:href => "/images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "/images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "/images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "/images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1.0"}/

  %body

    %header
      = render "shared/main_menu"
      = render "shared/flashes"

    .row-fluid
      .span2.menu-left
        .note.gap-bottom
          %h1.loud Welcome
          %p keep your environment clean and green!
          %p This is a very new project. So don't expect something spectacular here.
          .small.pull-right
            %em 
              %strong Andras Altendorfer,
              %br/
              September 20, 2012
          %p.clear-right
        = render "shared/left_menu"
      .span8
        = yield
      .span2.sidebar
        = render "shared/sidebar"
    
    .vertical-gap
    .row-fluid
    
    %footer.navbar-fixed-bottom
      &copy; 2012 by
      = link_to "Andreas Altendorfer", "http://altendorfer.at"
